<section class="scores"> 
  <h1 class="title">High Scores for <%= @puzzle.title %></h1>
  <table class="table">
    <thead class="table__head">
      <tr>
        <th class="table__column"></th>
        <th class="table__column">Name</th>
        <th class="table__column">Score</th>
      </tr>
    </thead>
    <tbody class="table__body">
      <% @scores.each_with_index do |score, index| %>
        <tr class="table__row">
          <td><%= index + 1 %></td>
          <td><%= score.player_name %></td>

          <% if score.number.to_s.size == 6 %>
              <% number_string = score.number.to_s %>
              <% minutes = number_string[0] + number_string[1] %>
              <% seconds = number_string[2] + number_string[3] + "." + number_string[4] + number_string[5] %>

              <td><%= minutes + "m " + seconds + "s" %></td>
          <% elsif score.number.to_s.size == 5 %>
            <% number_string = score.number.to_s %>
            <% minutes = number_string[0] %>
            <% seconds = number_string[1] + number_string[2] + "." + number_string[3] + number_string[4] %>

            <td><%= minutes + "m " + seconds + "s" %></td>
          <% elsif score.number.to_s.size == 4 %>
            <% number_string = score.number.to_s %>
            <% seconds = number_string[0] + number_string[1] + "." + number_string[2] + number_string[3] %>

            <td><%= seconds + "s" %></td>
          <% elsif score.number.to_s.size == 3 %>
            <% number_string = score.number.to_s %>
            <% seconds = number_string[0] + "." + number_string[1] + number_string[2] %>

            <td><%= seconds + "s" %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>
